<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <template id="display_cars" name="Cars">
        <t t-call="website.layout">
            <div class="container">
                <h1 class="car_title"><i class="fa fa-car"></i> Cars </h1>
                <p id="message_id_car">You find here all your cars</p>

                <a href="/cars/create/"><i class="fa fa-plus-circle"></i> Add new Cars</a>
                <br></br>
                <br></br>
                <table width="1000" class="table table-striped table-hover">
                    <thead class="thead-dark">                
                        <tr>
                            <td width='30%'>Name</td>
                            <td width='20%'>Horse</td>
                            <td width='20%'>Doors</td>
                            <td width='15%' class="center">Edit</td>
                        </tr>                          
                    </thead>
                    <t t-foreach="car" t-as="line">
                        <tbody>
                            <tr>
                                <td><span t-esc="line.name"/></td>
                                <td><span t-esc="line.hoors_power"/></td>
                                <td><span t-esc="line.doors_number"/></td>
                                <td><a t-attf-href="/cars/edit?id=#{line.id}"><i class="fa fa-pencil"></i> Edit </a> | <a t-attf-href="/cars/delete?id=#{line.id}"><i class="fa fa-trash"></i> Delete </a></td>
                            </tr>
                        </tbody>
                    </t>                
                </table>
            
            </div>
        </t>
    </template>
    
</odoo>
