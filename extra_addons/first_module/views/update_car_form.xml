<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <template id="update_car_form" name="Cars">
        <t t-call="website.layout">
            <div class="container">
                <h2>Update Cars</h2>
                    <form action="/cars/update/" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                        <input type="hidden" name="id" t-att-value="car.id" />
                        
                        <div class="form-group row">

                            <div class="col-sm-6">                                
                                <div class="col-sm-12">                                
                                    <label for='name' class="col-sm-12 col-form-label">Name</label>
                                    <input type="text" name="name" class="form-control" t-att-value="car.name"> </input>   
                                                            
                                </div>                            
                                <div class="col-sm-12">                                
                                    <label for='name' class="col-sm-12 col-form-label">Door Number</label>
                                    <input type="number" name="doors_number" class="form-control" t-att-value="car.doors_number"></input>    
                                                            
                                </div>                            
                                <div class="col-sm-12">                                
                                    <label for='name' class="col-sm-12 col-form-label">Hoors Number</label>
                                    <input type="number" name="hoors_power" class="form-control" t-att-value="car.hoors_power"></input>    
                                                            
                                </div> 
                            </div>
                        
                        </div>
                        <div class="form-group row">                        
                            <div class="col-sm-12">                                
                                
                                <button string="Submit" type="submit" special="submit" class="btn btn-primary">Update</button>
                                
                                                        
                            </div>
                        </div>
                    
                    
                    </form>
            
            </div>
        
        </t>
    </template>
</odoo>
