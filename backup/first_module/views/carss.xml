<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="carss_tree">
            <field name="name">car.cars.tree</field>
            <field name="model">car.cars</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="doors_number"/>
                    <field name="hoors_power"/>
                    <field name="driver_id"/>
                    <field name="is_sport"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record model="ir.ui.view" id="carss_form_form">
            <field name="name">car.cars.form</field>
            <field name="model">car.cars</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="doors_number"/>
                                <field name="hoors_power"/>
                                <field name="driver_id"/>
                                <field name="is_sport"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="carss_form_action">
            <field name="name">Cars</field>
            <field name="res_model">car.cars</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem 
            id="main_carss_form"
            name="Cars"
        />

        <menuitem 
            id="menu_carss_form"
            name="Cars"
            parent="main_carss_form"
        />

        <menuitem 
            id="submenu_carss_form"
            name="Cars"
            parent="menu_carss_form"

            action="carss_form_action"
        />

    </data>
</odoo>
